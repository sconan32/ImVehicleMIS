@page
@model Web.Pages.News.CreateModel

@{
    ViewData["Title"] = "新建新闻";
}

<section class="banner_area">
    <div class="container">
        <div class="pull-left">
            <h3>新建新闻</h3>
        </div>
        <div class="pull-right">
            <a asp-page="/">主页</a>&gt;
            <a asp-page="/News">车辆</a>&gt;
            <a asp-page="/News/Create">新建新闻 </a>
        </div>
    </div>
</section>
<section class="main_feature_area">
    <div class="container">
        <div class="btn-toolbar">
            <div class="btn-group">
                <button class="btn btn-primary" type="submit" form="newForm"><span class="glyphicon glyphicon-floppy-saved"> </span> 保 存</button>
            </div>
            <div class="btn-group">
                <a class="btn btn-default" href="@Model.ReturnUrl"><span class="glyphicon glyphicon-trash" /> 放 弃</a>
            </div>

        </div>
        <br />
        <div class="row">
            <div class="col-sm-10">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">新车辆信息</h3>
                    </div>
                    <div class="panel-body" style="padding-right:60px;">

                        <form method="post" class="form-horizontal">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <input type="hidden" asp-for="ReturnUrl" />

                            <div class="form-group">
                                <label asp-for="NewsItem.Title" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="NewsItem.Title" class="form-control" />
                                    <span asp-validation-for="NewsItem.Title" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="form-group">
                                <label asp-for="NewsItem.Content" class="col-sm-2 control-label"></label>
                                <div class="col-sm-4">
                                    <textarea asp-for="NewsItem.Content" rows="20" class="form-control" ></textarea>
                                    <span asp-validation-for="NewsItem.Content" class="text-danger"></span>
                                </div>

                            </div>



                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


    <script>tinymce.init({ selector: 'textarea' });</script>
}
