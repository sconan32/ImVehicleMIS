@page
@model Web.Pages.Towns.IndexModel

@{
    ViewData["Title"] = "街道/镇 列表";
}
<section class="banner_area">
    <div class="container">
        <div class="pull-left">
            <h3>街道/镇 列表</h3>
        </div>
        <div class="pull-right">
           <a asp-page="/">主页</a>&gt;
            <a asp-page="/Town">街道</a>
        </div>
    </div>
</section>
<section class="main_feature_area">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TownList[0].Id)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.TownList[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TownList[0].GroupCount)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.TownList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GroupCount)
                    </td>
                    <td><a asp-page="./Details" asp-route-id="@item.Id">查看详细</a></td>
                </tr>
            }
        </tbody>
    </table>
</section>