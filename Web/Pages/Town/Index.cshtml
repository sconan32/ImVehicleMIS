@page
@model Web.Pages.Towns.IndexModel

@{
    ViewData["Title"] = "街道/镇 列表";
}
<section class="banner_area">
    <div class="container">
        <div class="pull-left">
            <h3>街道/镇 列表</h3>
        </div>
        <div class="pull-right">
           <a asp-page="/">主页</a>&gt;
            <a asp-page="/Town">街道</a>
        </div>
    </div>
</section>
<section class="main_feature_area">
    <div class="container">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TownList[0].Code)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.TownList[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TownList[0].GroupCount)
                    </th>

                    <th width="110"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.TownList)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GroupCount)
                        </td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-primary btn-sm" asp-page="./Details" asp-route-id="@item.Id"><span class="glyphicon glyphicon-zoom-in"></span> 查 看 </a>
                               
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>