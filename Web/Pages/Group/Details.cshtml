@page
@model Web.Pages.Group.DetailsModel

@{
    ViewData["Title"] = Model.GroupItem.Name + "详细信息";
}

<section class="banner_area">
    <div class="container">
        <div class="pull-left">
            <h3>@Model.GroupItem.Name</h3>
        </div>
        <div class="pull-right">
            <a asp-page="/Index">主页</a>
            &gt; <a asp-page="/Group/Index">安全单位</a>
            &gt; <a asp-page="/Group/Details" asp-route-id="@Model.GroupItem.Id">@Html.DisplayFor(model => model.GroupItem.Name) </a>
        </div>
    </div>
</section>
<section class="main_feature_area">
    <div class="container">
        <p>
            @if (await Model.CanEdit())
            {
                <a class="btn btn-new-item" asp-page="Edit" asp-route-id="@Model.GroupItem.Id" asp-route-returnUrl="@Url.GetLocalUrl(Request.Path+Request.QueryString)">
                    <span class="glyphicon glyphicon-edit"></span> 编辑单位
                </a>
                <a class="btn btn-new-item" asp-page="../Vehicle/Create" asp-route-groupId="@Model.GroupItem.Id" asp-route-returnUrl="@Url.GetLocalUrl(Request.Path+Request.QueryString)">
                    <span class="glyphicon glyphicon-plus"></span> 新增车辆
                </a>
                <a class="btn btn-new-item" asp-page="../Driver/Create" asp-route-groupId="@Model.GroupItem.Id" asp-route-returnUrl="@Url.GetLocalUrl(Request.Path+Request.QueryString)">
                    <span class="glyphicon glyphicon-plus"></span> 新增驾驶员
                </a>
                <a class="btn btn-new-item" asp-page="../Secureman/Create" asp-route-groupId="@Model.GroupItem.Id" asp-route-returnUrl="@Url.GetLocalUrl(Request.Path+Request.QueryString)">
                    <span class="glyphicon glyphicon-plus"></span> 新增安全员
                </a>
                <a class="btn btn-new-item" asp-page="../UserFile/Create" asp-route-groupId="@Model.GroupItem.Id" asp-route-returnUrl="@Url.GetLocalUrl(Request.Path+Request.QueryString)">
                    <span class="glyphicon glyphicon-plus"></span> 新增用户文件
                </a>
            }

        </p>
        <hr />
        <h4>基本信息</h4>
        <br />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        单位状态
                    </th>
                    <th>
                        注册车辆数量
                    </th>
                    <th>
                        驾驶员数量
                    </th>
                    <th>
                        单位类型
                    </th>
                    <th>
                        单位类型
                    </th>
                    <th>
                        负责人
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @(Model.GroupItem.IsValid ? "正常" : "预警")
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.GroupItem.VehicleCount)
                        @if (Model.GroupItem.VehicleInvalidCount > 0)
                        {
                            <span>( 预警状态 @Model.GroupItem.VehicleInvalidCount )</span>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.GroupItem.DriverCount)
                        @if (Model.GroupItem.DriverInvalidCount > 0)
                        {
                            <span>( 预警状态 @Model.GroupItem.DriverInvalidCount )</span>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.GroupItem.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.GroupItem.ChiefName) <span style="color:gray">( @Html.DisplayFor(model => model.GroupItem.ChiefName) )</span>
                    </td>
                    <td></td>
                </tr>

            </tbody>
        </table>
        <hr />

        <br />

        <div>

            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab"><b>车辆列表</b></a></li>
                <li role="presentation"><a href="#driver" aria-controls="driver" role="tab" data-toggle="tab"><b>驾驶员列表</b></a></li>
                <li role="presentation"><a href="#secureman" aria-controls="secureman" role="tab" data-toggle="tab"><b>安全员列表</b></a></li>
                <li role="presentation"><a href="#home" aria-controls="home" role="tab" data-toggle="tab"><b>详细信息</b></a></li>
                <li role="presentation"><a href="#userfile" aria-controls="userfile" role="tab" data-toggle="tab"><b>文件附件</b></a></li>
                <li role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab"><b>图片附件</b></a></li>

            </ul>
            <div style="border-bottom:1px solid #ddd;border-left:1px solid #ddd;border-right:1px solid #ddd;padding:20px;">
                <!-- Tab panes -->
                <div class="tab-content">

                    <div role="tabpanel" class="tab-pane active" id="profile">
                        <br />
                        <h4>车辆信息列表</h4>
                        <hr />
                        <table class="table  table-hover">
                            <thead>
                                <tr>

                                    <th>
                                        @Html.DisplayNameFor(model => model.GroupItem.Vehicles[0].License)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.GroupItem.Vehicles[0].Type)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.GroupItem.Vehicles[0].Usage)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.GroupItem.Vehicles[0].Brand)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.GroupItem.Vehicles[0].Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.GroupItem.Vehicles[0].Color)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.GroupItem.Vehicles[0].LastRegisterDate)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.GroupItem.Vehicles[0].DriverName)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.GroupItem.Vehicles[0].DriverTel)
                                    </th>





                                    <th width="90"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.GroupItem.Vehicles)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.License)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Type)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Usage)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Brand)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Color)
                                        </td>


                                        <td>
                                            @Html.DisplayFor(modelItem => item.LastRegisterDate)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.DriverName)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.DriverTel)
                                        </td>

                                        <td>
                                            <div class="btn-group">
                                                <a class="btn btn-primary btn-sm" asp-page="../Vehicle/Details" asp-route-id="@item.Id"><span class="glyphicon glyphicon-zoom-in"></span> 查 看 </a>
                                                @if (await Model.CanEdit())
                                                {
                                                    <button type="button" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                        <span class="caret"></span>
                                                        <span class="sr-only">向下弹出</span>
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li><a asp-page="../Vehicle/Details" asp-route-id="@item.Id"><span class="glyphicon glyphicon-zoom-in"></span> 查 看 </a></li>
                                                        <li role="separator" class="divider"></li>
                                                        <li><a asp-page="../Vehicle/Edit" asp-route-id="@item.Id" asp-route-returnUrl="@Url.GetLocalUrl(Request.Path+Request.QueryString)"> <span class="glyphicon glyphicon-edit"></span> 编 辑 </a></li>
                                                        <li><a class="danger" asp-page="../Vehicle/Delete" asp-route-id="@item.Id" asp-route-returnUrl="@Url.GetLocalUrl(Request.Path+Request.QueryString)"> <span class="glyphicon glyphicon-remove"></span> 删 除 </a></li>

                                                    </ul>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>


                    </div>
                    <div role="tabpanel" class="tab-pane" id="driver">
                        <br />
                        <h4>驾驶员列表</h4>

                        <hr />

                        <table class="table  table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.GroupItem.Drivers[0].Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.GroupItem.Drivers[0].Gender)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.GroupItem.Drivers[0].IdCardNumber)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.GroupItem.Drivers[0].LicenseType)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.GroupItem.Drivers[0].License)
                                    </th>




                                    <th>
                                        @Html.DisplayNameFor(model => model.GroupItem.Drivers[0].LicenseIssue)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.GroupItem.Drivers[0].ValidYears)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.GroupItem.Drivers[0].VehiclesRegistered)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.GroupItem.Drivers[0].Tel)
                                    </th>
                                    <th width="90"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.GroupItem.Drivers)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Gender)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IdCardNumber)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LicenseType)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.License)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LicenseIssue)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.ValidYears)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.VehiclesRegistered)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Tel)
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <a class="btn btn-primary btn-sm" asp-page="../Driver/Details" asp-route-id="@item.Id"><span class="glyphicon glyphicon-zoom-in"></span> 查 看 </a>
                                                @if (await Model.CanEdit())
                                                {
                                                    <button type="button" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                        <span class="caret"></span>
                                                        <span class="sr-only">向下弹出</span>
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li><a asp-page="../Driver/Details" asp-route-id="@item.Id"><span class="glyphicon glyphicon-zoom-in"></span> 查 看 </a></li>
                                                        <li role="separator" class="divider"></li>
                                                        <li><a asp-page="../Driver/Edit" asp-route-id="@item.Id" asp-route-returnUrl="@Url.GetLocalUrl(Request.Path+Request.QueryString)"> <span class="glyphicon glyphicon-edit"></span> 编 辑 </a></li>
                                                        <li><a class="danger" asp-page="../Vehicle/Delete" asp-route-id="@item.Id" asp-route-returnUrl="@Url.GetLocalUrl(Request.Path+Request.QueryString)"> <span class="glyphicon glyphicon-remove"></span> 删 除 </a></li>

                                                    </ul>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                    <div role="tabpanel" class="tab-pane" id="secureman">
                        <br />
                        <h4>安全员列表</h4>

                        <hr />
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.GroupItem.Securemans[0].Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.GroupItem.Securemans[0].Tel)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.GroupItem.Securemans[0].Title)
                                    </th>

                                    <th width="90"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.GroupItem.Securemans)
            {
                                    <tr>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Tel)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Title)
                                        </td>

                                        <td>
                                            <div class="btn-group">
                                                @if (await Model.CanEdit())
                                                {
                                                    <a class="btn btn-primary btn-sm" asp-page="../Secureman/Delete" asp-route-id="@item.Id" asp-route-returnUrl="@Url.GetLocalUrl(Request.Path+Request.QueryString)"><span class="glyphicon glyphicon-remove"></span> 删 除 </a>


                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>


                    </div>
                    <div role="tabpanel" class="tab-pane" id="userfile">
                        <h4>用户文件列表</h4>

                        <hr />
                        <table class="table">
                            <thead>
                                <tr>


                                    <th>
                                        @Html.DisplayNameFor(model => model.GroupItem.UserFiles[0].Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.GroupItem.UserFiles[0].FileName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.GroupItem.UserFiles[0].SizeString)
                                    </th>

                                    <th width="90"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.GroupItem.UserFiles)
            {
                                    <tr>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FileName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SizeString)
                                        </td>

                                        <td>
                                            <div class="btn-group">
                                                <a class="btn btn-primary btn-sm" asp-page="../UserFile/Download" asp-route-id="@item.Id"><span class="glyphicon glyphicon-zoom-in"></span> 下 载</a>
                                                @if (await Model.CanEdit())
                                                {
                                                    <button type="button" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                        <span class="caret"></span>
                                                        <span class="sr-only">向下弹出</span>
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li><a class="danger" asp-page="../UserFile/Delete" asp-route-id="@item.Id" asp-route-returnUrl="@Url.GetLocalUrl(Request.Path+Request.QueryString)"> <span class="glyphicon glyphicon-remove"></span> 删 除 </a></li>

                                                    </ul>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>


                    </div>
                    <div role="tabpanel" class="tab-pane " id="home">
                        <br />
                        <h4>详细信息</h4>

                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.GroupItem.Id)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.GroupItem.Id)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.GroupItem.Address)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.GroupItem.Address)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.GroupItem.RegisterAddress)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.GroupItem.RegisterAddress)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.GroupItem.Type)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.GroupItem.Type)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.GroupItem.ChiefName)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.GroupItem.ChiefName)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.GroupItem.ChiefTel)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.GroupItem.ChiefTel)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.GroupItem.Type)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.GroupItem.Type)
                            </dd>

                        </dl>
                    </div>
                    <div role="tabpanel" class="tab-pane" id="messages">

                        <br />
                        <h4>图片附件</h4>

                        <hr />

                        <div class="panel panel-default">
                            <div class="panel-heading">@Html.DisplayNameFor(model => model.GroupItem.PhotoMain)</div>
                            <div class="panel-body">
                                <img src="data:image;base64,@Model.GroupItem.PhotoMain" />
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">@Html.DisplayNameFor(model => model.GroupItem.PhotoWarranty)</div>
                            <div class="panel-body">
                                <img src="data:image;base64,@Model.GroupItem.PhotoWarranty" />
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">@Html.DisplayNameFor(model => model.GroupItem.PhotoSecurity)</div>
                            <div class="panel-body">
                                <img src="data:image;base64,@Model.GroupItem.PhotoSecurity" />
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</section>
