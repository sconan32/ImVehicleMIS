@page
@model Web.Pages.Group.IndexModel

@{
    ViewData["Title"] = "全部安全单位 列表";
}
<section class="banner_area">
    <div class="container">
        <div class="pull-left">
            <h3>全部安全单位 列表</h3>
        </div>
        <div class="pull-right">
            <a asp-page="/">主页</a>&gt;
            <a asp-page="/Town">安全单位</a>
        </div>
    </div>
</section>
<section class="main_feature_area">
    <div class="container">

        <p>
            <a class="btn btn-new-item" asp-page="Create">创建新安全单位</a>
        </p>
        <hr />
       
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Groups[0].Code)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Groups[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Groups[0].ChiefName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Groups[0].ChiefTel)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Groups[0].VehicleCount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Groups[0].InvalidCount)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Groups)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Code)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ChiefName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ChiefTel)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VehicleCount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InvalidCount)
                        </td>
                        <td>
                            <a class="btn btn-item-detail" asp-page="Details" asp-route-id="@item.Id">查看详细</a> |
                            <a asp-page="Edit" asp-route-id="@item.Id">编辑</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>