@page
@model Web.Pages.Group.DeleteModel

<section class="banner_area">
    <div class="container">
        <div class="pull-left">
            <h3>
                <i class="fa fa-question-circle-o" aria-hidden="true"></i>
                删除安全单位 @Model.GroupItem.Name
            </h3>
        </div>
        <div class="pull-right">
            <a asp-page="/Index">主页</a>&gt;
            <a asp-page="/Group/Index">安全单位</a>&gt;
            <a asp-page="/Group/Delete" asp-route-id="@Model.GroupItem.Id">删除确认</a>
        </div>
    </div>
</section>
<section class="main_feature_area">
    <div class="container">
       
        <div class="row">
           
            <div class="btn-toolbar">
                <div class="btn-group">
                    <form method="post">
                        <input type="hidden" asp-for="GroupItem.Id" />
                        <input type="hidden" asp-for="ReturnUrl" />
                        <button class="btn btn-del-item" type="submit"><i class="fa fa-trash-o" aria-hidden="true"></i> 确 认 删 除</button>

                    </form>

                </div>
                <div class="btn-group">

                    <a class="btn btn-nav-back" href="@Model.ReturnUrl"><i class="fa fa-reply" aria-hidden="true"></i> 返 回</a>
                </div>

            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-10">
                <div class="alert alert-warning" role="alert">
                    <b>注意：</b> 当一个安全单位存在与之相关的注册车辆，驾驶员，用户文件或者安全员时，你不能删除这个安全单位。
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                        将要删除如下安全单位，该操作不可恢复</h3>
                    </div>
                    <div class="panel-body" style="padding-right:60px;">
                       

                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.GroupItem.Name)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.GroupItem.Name)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.GroupItem.Type)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.GroupItem.Type)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.GroupItem.ChiefName)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.GroupItem.ChiefName) ( @Html.DisplayFor(model => model.GroupItem.ChiefTel))
                            </dd>

                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>


