@page
@model Web.Pages.Group.CreateModel

@{
    ViewData["Title"] = "新增安全单位";
}

<section class="banner_area">
    <div class="container">
        <div class="pull-left">
            <h3><i class="fa fa-pencil-square-o"></i> 新建安全单位</h3>
        </div>
        <div class="pull-right">
            <a asp-page="/">主页</a>&gt;
            <a asp-page="/Group">安全单位</a>&gt;
            <a asp-page="/Group/Create">新建安全单位</a>
        </div>
    </div>
</section>
<section class="main_feature_area">
    <div class="container">
        <div class="btn-toolbar">
            <div class="btn-group">
                <button class="btn btn-edit-item" type="submit" form="newForm"><i class="fa fa-floppy-o"></i> 保 存</button>

            </div>
            <div class="btn-group">

                <a class="btn btn-nav-back" href="@Model.ReturnUrl"><i class="fa fa-reply" aria-hidden="true"></i>放 弃</a>
            </div>

        </div>
        <br />
        <div class="row">
            <div class="col-sm-10">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">新安全单位信息</h3>
                    </div>
                    <div class="panel-body" style="padding-right:60px;">

                        <form class="form-horizontal" method="post" enctype="multipart/form-data" id="newForm">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <input type="hidden" asp-for="ReturnUrl" />
                            @if (await Model.IsAdmin())
    {
                        <div class="form-group">

                            <label asp-for="GroupItem.TownId" class="col-sm-2 control-label"></label>
                            <div class="col-sm-4">
                                <select asp-for="GroupItem.TownId" class="form-control" asp-items="@ViewBag.TownList">
                                    <option>请选择街道 </option>
                                </select>
                                <span asp-validation-for="GroupItem.TownId" class="text-danger"></span>
                            </div>

                        </div>
}
                            <div class="form-group">

                                <label asp-for="GroupItem.Name" class="col-sm-2 control-label"></label>
                                <div class="col-sm-4">
                                    <input asp-for="GroupItem.Name" class="form-control" />
                                    <span asp-validation-for="GroupItem.Name" class="text-danger"></span>
                                </div>
                                <label asp-for="GroupItem.Code" class="col-sm-2 control-label"></label>
                                <div class="col-sm-4">
                                    <input asp-for="GroupItem.Code" class="form-control" />
                                    <span asp-validation-for="GroupItem.Code" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="GroupItem.Type" class="col-sm-2 control-label"></label>
                                <div class="col-sm-4">
                                    <input asp-for="GroupItem.Type" class="form-control" />
                                    <span asp-validation-for="GroupItem.Type" class="text-danger"></span>
                                </div>
                                <label asp-for="GroupItem.License" class="col-sm-2 control-label"></label>
                                <div class="col-sm-4">
                                    <input asp-for="GroupItem.License" class="form-control" />
                                    <span asp-validation-for="GroupItem.License" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="GroupItem.RegisterAddress" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="GroupItem.RegisterAddress" class="form-control" />
                                    <span asp-validation-for="GroupItem.RegisterAddress" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="GroupItem.Address" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="GroupItem.Address" class="form-control" />
                                    <span asp-validation-for="GroupItem.Address" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="GroupItem.ChiefName" class="col-sm-2 control-label"></label>
                                <div class="col-sm-2">
                                    <input asp-for="GroupItem.ChiefName" class="form-control" />
                                    <span asp-validation-for="GroupItem.ChiefName" class="text-danger"></span>
                                </div>
                                <label asp-for="GroupItem.ChiefTitle" class="col-sm-2 control-label"></label>
                                <div class="col-sm-2">
                                    <input asp-for="GroupItem.ChiefTitle" class="form-control" />
                                    <span asp-validation-for="GroupItem.ChiefTitle" class="text-danger"></span>
                                </div>
                                <label asp-for="GroupItem.ChiefTel" class="col-sm-2 control-label"></label>
                                <div class="col-sm-2">
                                    <input asp-for="GroupItem.ChiefTel" class="form-control" />
                                    <span asp-validation-for="GroupItem.ChiefTel" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="GroupItem.PoliceOffice" class="col-sm-2 control-label"></label>
                                <div class="col-sm-4">
                                    <input asp-for="GroupItem.PoliceOffice" class="form-control" />
                                    <span asp-validation-for="GroupItem.PoliceOffice" class="text-danger"></span>
                                </div>

                                <label asp-for="GroupItem.Policeman" class="col-sm-2 control-label"></label>
                                <div class="col-sm-4">
                                    <input asp-for="GroupItem.Policeman" class="form-control" />
                                    <span asp-validation-for="GroupItem.Policeman" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="GroupItem.ApplicationFile" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="GroupItem.ApplicationFile" class="form-control" />
                                    <span asp-validation-for="GroupItem.ApplicationFile" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="GroupItem.RuleFile" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="GroupItem.RuleFile" class="form-control" />
                                    <span asp-validation-for="GroupItem.RuleFile" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="GroupItem.DriverGuranteeFile" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="GroupItem.DriverGuranteeFile" class="form-control" />
                                    <span asp-validation-for="GroupItem.DriverGuranteeFile" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="GroupItem.GroupGuranteeFile" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="GroupItem.GroupGuranteeFile" class="form-control" />
                                    <span asp-validation-for="GroupItem.GroupGuranteeFile" class="text-danger"></span>
                                </div>
                            </div>



                            <div class="form-group">
                                <label asp-for="GroupItem.PhotoMain" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="GroupItem.PhotoMain" class="form-control" />
                                    <span asp-validation-for="GroupItem.PhotoMain" class="text-danger"></span>
                                </div>
                            </div>
                                                  



                            <div class="form-group">
                                <label asp-for="GroupItem.ExtraPhoto1" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="GroupItem.ExtraPhoto1" rows="8" class="form-control"/>
                                    <span asp-validation-for="GroupItem.ExtraPhoto1" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="GroupItem.ExtraPhoto2" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="GroupItem.ExtraPhoto2" rows="8" class="form-control"/>
                                    <span asp-validation-for="GroupItem.ExtraPhoto2" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="GroupItem.ExtraPhoto3" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="GroupItem.ExtraPhoto3" rows="8" class="form-control"/>
                                    <span asp-validation-for="GroupItem.ExtraPhoto3" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="GroupItem.Comment" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <textarea asp-for="GroupItem.Comment" rows="8" class="form-control"></textarea>
                                    <span asp-validation-for="GroupItem.Comment" class="text-danger"></span>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/tinymce/tinymce.min.js"></script>
    <script>tinymce.init({ selector: 'textarea', language: 'zh_CN' });</script>
}