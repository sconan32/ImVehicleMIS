@page
@model Web.Pages.UserFile.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<section class="banner_area">
    <div class="container">
        <div class="pull-left">
            <h3>确认删除如下用户文件吗？</h3>
        </div>
        <div class="pull-right">
            <a asp-page="/Index">主页</a>&gt;
            <a asp-page="/Group/Index">安全单位</a>&gt;
            <a asp-page="/UserFile/Delete" asp-route-id="@Model.UserFile.Id">删除用户文件 @Model.UserFile.Name</a>
        </div>
    </div>
</section>
<section class="main_feature_area">
    <div class="container">
        <div class="row">
            <h3></h3>
        </div>
        <div class="btn-toolbar">

            <div class="btn-group">

                <form method="post">
                    <input type="hidden" asp-for="UserFile.Id" />
                    <input type="hidden" asp-for="ReturnUrl" />
                    <button class="btn btn-danger" type="submit"><span class="glyphicon glyphicon-remove"></span> 确 认 删 除</button>

                </form>

            </div>
            <div class="btn-group">

                <a class="btn btn-default" href="@Model.ReturnUrl"><span class="glyphicon glyphicon-trash" /> 放 弃</a>
            </div>

        </div>
        <br />
        <div class="row">
            <div class="col-sm-10">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">【删除】用户文件 @Model.UserFile.Name</h3>
                    </div>
                    <div class="panel-body" style="padding-right:60px;">


                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.UserFile.Name)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.UserFile.Name)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.UserFile.Size)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.UserFile.Size)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.UserFile.CreationDate)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.UserFile.CreationDate)
                            </dd>

                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>