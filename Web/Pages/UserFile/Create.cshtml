@page
@model Web.Pages.UserFile.CreateModel

@{
    ViewData["Title"] = "Create";
}

<section class="banner_area">
    <div class="container">
        <div class="pull-left">
            <h3>上传用户文件</h3>
        </div>
        <div class="pull-right">
            <a asp-page="/Index">主页</a>&gt;
            <a asp-page="/Group/Index">安全单位</a>&gt;
            <a asp-page="/UserFile/Create" asp-route-groupId="@Model.UserFile.GroupId">上传用记文件</a>
        </div>
    </div>
</section>
<section class="main_feature_area">
    <div class="container">
        <div class="btn-toolbar">
            <div class="btn-group">
                <button class="btn btn-primary" type="submit" form="newForm"><span class="glyphicon glyphicon-floppy-open"> </span> 上 传</button>

            </div>
            <div class="btn-group">

                <a class="btn btn-default" href="@Model.ReturnUrl"><i class="fa fa-reply" aria-hidden="true"></i>放 弃</a>
            </div>

        </div>
        <br />
        <div class="row">
            <div class="col-sm-10">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">上传用户文件</h3>
                    </div>
                    <div class="panel-body" style="padding-right:60px;">
                        <form method="post" id="newForm" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <input type="hidden" asp-for="ReturnUrl" />
                            <input asp-for="UserFile.GroupId" type="hidden" />


                            <div class="form-group">
                                <label asp-for="UserFile.Name" class="control-label"></label>
                                <input asp-for="UserFile.Name" class="form-control" />
                                <span asp-validation-for="UserFile.Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="UserFile.UploadFile" class="control-label"></label>
                                <input asp-for="UserFile.UploadFile" class="form-control" />
                                <span asp-validation-for="UserFile.UploadFile" class="text-danger"></span>
                            </div>

                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
