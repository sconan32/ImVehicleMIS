@page
@model Web.Pages.Account.Manage.UserManageModel
@{
    ViewData["Title"] = "用户列表";
}



<div  class="row">

    <div class="col-md-6">
        <h4>用户列表</h4>
    </div>
    <div class="col-md-2"
    <p>
        <a class="btn btn-new-item" asp-page="../Register" asp-route-returnUrl="@Url.GetLocalUrl(Request.Path)"> <i class="fa fa-plus" aria-hidden="true"></i> 新建用户</a>

    </p>
    </div>
</div>
    <hr />
    <br />

    <table class="table">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.UserList[0].Name)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.UserList[0].Email)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.UserList[0].PhoneNumber)
                </th>


                <th>
                    @Html.DisplayNameFor(model => model.UserList[0].Type)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.UserList[0].TownName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserList[0].GroupName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserList[0].Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.UserList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.TownName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GroupName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <div class="btn-group">
                            
                            <a class="btn btn-view-item btn-sm" asp-page="./ChangePassword" asp-route-id="@item.Id"><i class="fa fa-search-plus" aria-hidden="true"></i> 修改密码 </a>
                            @if (item.StatusCode == StatusType.OK)
                            {
                                <a class="btn btn-view-item btn-sm" asp-page="./Details" asp-route-id="@item.Id"><i class="fa fa-search-plus" aria-hidden="true"></i> 停用账户 </a>
                            }
                            else if (item.StatusCode == StatusType.Forbidden)
                            {
                                <a class="btn btn-view-item btn-sm" asp-page="./Details" asp-route-id="@item.Id"><i class="fa fa-search-plus" aria-hidden="true"></i> 启用账户 </a>
                            }
                            else if (item.StatusCode == StatusType.Authorizing)
                            {
                                <a class="btn btn-view-item btn-sm" asp-page="./Details" asp-route-id="@item.Id"><i class="fa fa-search-plus" aria-hidden="true"></i> 审核账户 </a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

