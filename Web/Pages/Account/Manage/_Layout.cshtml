@{
    Layout = "/Pages/_Layout.cshtml";
}
<section class="banner_area">
    <div class="container">
        <div class="pull-left">
            <h3>用户信息</h3>
        </div>
        <div class="pull-right">
            <a asp-page="/">主页</a>&gt;
            <a asp-page="/Account/Manage">用户</a>
        </div>
    </div>
</section>
<section class="main_feature_area">
    <div class="container">
        <h2>Manage your account</h2>

        <div>
            <h4>Change your account settings</h4>
            <hr />
            <div class="row">
                <div class="col-md-3">
                    @await Html.PartialAsync("_ManageNav")
                </div>
                <div class="col-md-9">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</section>
    @section Scripts {
    @RenderSection("Scripts", required: false)
}

